@{
    ViewData["Title"] = "DashboardA";
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="wwwroot/css/site.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">


}

<!DOCTYPE html>
<html>
<head>
    <title>Opciones</title>
    <style>

        .main {
            max-width: 1200px;
            margin: 0 auto;
            padding:60px;
        }

        .centerBox{
            width:100%;
            min-height:100%;
            padding:20px;
        }

        h1 {
            font-size: 34px;
            font-weight: 900;
            text-align: center;
            color: #4f4f4f
        }

        img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            vertical-align: middle;
        }

        .btn {
            color: #ffffff;
            padding: 0.8rem;
            font-size: 14px;
            text-transform: uppercase;
            border-radius: 4px;
            font-weight: 400;
            display: block;
            width: 100%;
            cursor: pointer;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: transparent;
        }

            .btn:hover {
                background-color: rgba(255, 255, 255, 0.12);
            }

        .cards {
            display: flex;
            flex-wrap: wrap;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .cards_item {
            display: flex;
            padding: 1rem;
        }

        @@media (min-width: 40rem) {
            .cards_item {
                width: 50%;
            }
        }

        @@media (min-width: 56rem) {
            .cards_item {
                width: 33.3333%;
            }
        }

        .card {
            background: linear-gradient(to bottom left, #fff 40%, #FFF 100%);
            border-radius: 7px;
            box-shadow: 0 20px 40px -14px rgba(0, 0, 0, 0.25);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .card_content {
            padding: 1rem;
            background: linear-gradient(to bottom left, #fff 40%, #FFF 100%);
        }

        .card_title {
            color: #9D0044ff;
            font-size: 1.2rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: capitalize;
            margin: 0px;
            margin-bottom: 8px;
        }

        .card_text {
            color: #4f4f4f;
            font-size: 0.890rem;
            line-height: 1.5;
            margin-bottom: 1.25rem;
            font-weight: 400;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="centerBox">
            <h1 style="text-align:left; margin-left:10px;margin-bottom:40px">Opciones</h1>
            <ul class="cards" style="margin-bottom:50px;">

                <li class="cards_item">
                    <div class="card">
                        <div class="card_image">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AdminUser" asp-action="Index">
                                <img src="~/img/prefabimgs/faq5.jpg">
                            </a>
                            
                        </div>
                        <div class="card_content">
                            <h2 class="card_title">Campañas</h2>
                            <p class="card_text">
                                Podrás visualizar todas las publicaciones ya publicadas.
                            </p>
                        </div>
                    </div>
                </li>
                <li class="cards_item">
                    <div class="card">
                        <div class="card_image">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PendingPr" asp-action="Index">
                                <img src="~/img/prefabimgs/faq3.jpg">
                            </a>
                            
                         </div>
                        <div class="card_content">
                            <h2 class="card_title">Publicaciones Pendientes</h2>
                            
                            <p class="card_text">
                                Podrás visualizar todas las publicaciones pendientes a ser aprobadas.
                            </p>

                        </div>
                    </div>
                </li>

                <li class="cards_item">
                    <div class="card">
                        <div class="card_image">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/img/prefabimgs/faq6.jpg">
                            </a>
                            
                        </div>
                        <div class="card_content">
                            <h2 class="card_title">Campañas Publicadas</h2>
                            <p class="card_text">
                                Podrás visualizar todas las publicaciones aprobadas en el inicio de la pagina.
                            </p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        
    </div>

</body>
</html>

