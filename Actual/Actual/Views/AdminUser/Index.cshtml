@model IEnumerable<Actual.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";

}

<!DOCTYPE html>
<html>
<head>
    <title>Usuarios Registrados</title>
    <style>


        .main {
            max-width: 1200px;
            margin: 0 auto;
        }

        h1 {
            font-size: 34px;
            font-weight: 900;
            text-align: center;
            color: #4f4f4f
        }

        img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            vertical-align: middle;
        }

        .btn {
            color: #ffffff;
            margin-bottom: 4px;
            padding: 0.8rem;
            font-size: 14px;
            text-transform: uppercase;
            border-radius: 4px;
            font-weight: 400;
            display: block;
            width: 100%;
            cursor: pointer;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: transparent;
        }

            .btn:hover {
                background-color: rgba(255, 255, 255, 0.12);
            }

        .cards {
            display: flex;
            flex-wrap: wrap;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .cards_item {
            display: flex;
            padding: 1rem;
        }

        @@media (min-width: 40rem) {
            .cards_item {
                width: 50%;
            }
        }

        @@media (min-width: 56rem) {
            .cards_item {
                width: 33.3333%;
            }
        }

        .card {
            background: linear-gradient(to bottom left, #FDF9F0ff 40%, #FFF 100%);
            border-radius: 7px;
            box-shadow: 0 20px 40px -14px rgba(0, 0, 0, 0.25);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .card_content {
            padding: 1rem;
            background: linear-gradient(to bottom left, #FDF9F0ff 40%, #FFF 100%);
        }

        .card_title {
            color: #9D0044ff;
            font-size: 1.2rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: capitalize;
            margin: 0px;
            margin-bottom: 8px;
        }

        .card_text {
            color: #4f4f4f;
            font-size: 0.890rem;
            line-height: 1.5;
            margin-bottom: 1.25rem;
            font-weight: 400;
        }

        .made_by {
            font-weight: 400;
            font-size: 13px;
            margin-top: 35px;
            text-align: center;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .approve-button {
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .edit-button {
            background-color: #ffc107;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .reject-button {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="main">
        <h1 style="text-align:left; margin-left:10px; margin-bottom:50px;margin-top:30px;">Proyectos Pendientes</h1>
        <ul class="cards">



            @foreach (var item in Model)
            {
                <li class="cards_item">
                    <div class="card" style="margin-bottom:100px;">
                        
                        <div class="card_content">
                            <h2 class="card_title">
                                <p>@Html.DisplayFor(modelItem => item.Nombre)</p>
                            </h2>

                            <p class="project-description">@Html.DisplayFor(modelItem => item.CorreoElectronico)</p>

                        </div>

                        <div>
                            
                        </div>
                    </div>
                </li>


            }

        </ul>
    </div>

    


</body>
</html>

