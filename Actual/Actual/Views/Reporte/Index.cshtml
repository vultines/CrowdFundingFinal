@model Actual.ViewModels.ReporteViewModels
@{
    ViewData["Title"] = "Reporte";

}
<!DOCTYPE html>
<html>
<head>
    <style>
        .main {
            max-width: 1200px;
            margin: 0 auto;
        }

        :root {
            --seasalt: #F8F9FA;
            --eerie-black: #252525;
            --amaranth-purple: #9D0044;
            --raspberry: #E40163;
            --floral-white: #FDF9F0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--seasalt);
            color: var(--eerie-black);
        }

        .row {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .ui-item {
            border: 1px solid var(--amaranth-purple);
            border-radius: 10px;
            padding: 20px;
            width: 200px;
            text-align: center;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
            transition: all 0.3s ease-in-out;
        }

            .ui-item:hover {
                transform: scale(1.05);
            }

            .ui-item h4 {
                font-size: 24px;
                margin-bottom: 5px;
                color: var(--raspberry);
            }

            .ui-item p {
                font-size: 18px;
                color: var(--eerie-black);
            }

            .ui-item .fa {
                font-size: 50px;
                color: var(--floral-white);
            }

            .ui-item.bg-active {
                background-color: var(--floral-white);
            }

                .ui-item.bg-active .fa {
                    color: var(--amaranth-purple);
                }

        .form-group {
            margin-bottom: 20px;
        }

        .btn {
            background-color: var(--amaranth-purple);
            color: var(--floral-white);
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            .btn:hover {
                background-color: var(--raspberry);
            }
    </style>
</head>
<body>
    <div class="main" style="padding:90px;">
        <h1 style="text-align:left; margin-left:0px; margin-bottom:30px;">Reportes Basicos.</h1>

        <form asp-action="Index">
            <div class="form-group">
                <label for="fechaInicio">Fecha de inicio:</label>
                <input type="date" id="fechaInicio" name="fechaInicio" class="form-control">
            </div>
            <div class="form-group">
                <label for="fechaFin">Fecha de fin:</label>
                <input type="date" id="fechaFin" name="fechaFin" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
        <div>
            <div>
                <div>
                    <div class="row">
                        <div><h4>Hola, @User.Identity.Name</h4></div>
                    </div>
                </div>
                <div class="row">
                    <div class="ui-item">
                        <div class="left">
                            <h4>@Model.Campaña_Count</h4>
                            <p>Campañas</p>
                        </div>
                        <div class="right">
                            <i class="fa fa-book"></i>
                        </div>
                    </div>
                    <div class="ui-item bg-active">
                        <div class="left">
                            <h4>@Model.Usuarios_Count</h4>
                            <p>Usuarios</p>
                        </div>
                        <div class="right">
                            <i class="fa fa-user-o"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>