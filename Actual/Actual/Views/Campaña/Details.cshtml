@model Actual.Models.Campaña

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Estilos para la tabla */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    /* Estilos para las imágenes */
    .campaign-image {
        max-height: 200px;
        max-width: 200px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
    }

        .campaign-image:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
</style>

<div class="container">
    <h3 class="heading-2 align-content-center">Detalle Campaña</h3>
    <h3 class="heading-2 align-content-center">Imágenes</h3>
    <div class="row justify-content-center align-items-center">
        @foreach (var image in Model.Imagens)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                <div class="d-flex justify-content-center align-items-center">
                    <img src="data:image;base64,@Convert.ToBase64String(image.Ruta)" alt="@image.Id" class="img-fluid campaign-image" />
                </div>
            </div>
        }
    </div>
    <table>
        <tr>
            <th>Nombre Campaña</th>
            <td>@Html.DisplayFor(model => model.NombreCampaña)</td>
        </tr>
        <tr>
            <th>Descripcion General</th>
            <td>@Html.DisplayFor(model => model.DescripcionGeneral)</td>
        </tr>
        <tr>
            <th>Objetivos</th>
            <td>@Html.DisplayFor(model => model.Objetivos)</td>
        </tr>
        <tr>
            <th>Vision</th>
            <td>@Html.DisplayFor(model => model.Vision)</td>
        </tr>
        <tr>
            <th>Riesgos</th>
            <td>@Html.DisplayFor(model => model.Riesgos)</td>
        </tr>
        <tr>
            <th>Enlace</th>
            <td>@Html.DisplayFor(model => model.Enlace)</td>
        </tr>
        <tr>
            <th>Categoria</th>
            <td>@Html.DisplayFor(model => model.IdCategoriaNavigation.NombreCategoria)</td>
        </tr>
        <tr>
            <th>Categoria</th>
            <td>@Html.DisplayFor(model => model.IdCategoriaAsesoramientoNavigation.NombreAsesoramiento)</td>
        </tr>
        <tr>
            <th>Enlace</th>
            <td>@Html.DisplayFor(model => model.Enlace)</td>
        </tr>
    </table>



    <button class="btn button-theme btn-search bs-2 btn-block">
        <a asp-action="Index">Volver</a>
    </button>
</div>

