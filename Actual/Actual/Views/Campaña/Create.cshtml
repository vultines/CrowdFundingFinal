@model Actual.Models.Campaña

@{
    ViewData["Title"] = "Create";
}

<head>
    <style>

        .mainBod {
            max-width: 100%;
            margin: 0 auto;
            padding: 30px;
            align-items: center;
            background-color: #f2f2f2;
        }

        h1 {
            font-size: 24px;
            font-weight: 900;
            text-align: left;
            color: #E40163ff;
            font-size: 45px;
        }

        .banner {
            width: 100%;
            height: auto;
            justify-content: center;
            align-items: center;
            color: #fff;
            font-size: 20px;
        }

        img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            vertical-align: middle;
        }

        .imgBanner {
            width: 100%;
            height: 430px;
            object-fit: fill;
            vertical-align: middle;
        }

        .cards {

            flex-wrap: wrap;
            list-style: none;
            margin: 0;
            padding: 0;
            background-color: none;
            justify-content: center;
            align-items: center;
        }

        .cards_item {
            flex-wrap: wrap;
            max-width: 350px;
            padding: 1rem;
            background-color: none;
            color: #fff;
        }

        .card_content {
            padding: 0;
            background: none;
            justify-content: center;
            text-align: left;
            align-items: center;
            background-color: none;
        }

        .card_titleCont {
            width: auto;
            color: #E40163ff;
            font-size: 20px;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: capitalize;
            margin: 0px;
            margin-bottom: 8px;
            justify-content: center;
            text-align: left;
            align-items: center;
            align-self: center;
            background-color: none;
        }

        .card_text {
            color: #575757;
            font-size: 15px;
            line-height: 1.5;
            margin-bottom: 1.25rem;
            font-weight: bolder;
            background-color: none;
        }

        .cards_item2 {
            max-width: 300px;
            max-height: 130px;
            margin-left: 10px;
            padding: 1rem;
            background-color: none;
            border-radius: 100px;
            color: #fff;
            text-align: center;
        }

        @@media (min-width: 40rem) {
            .cards_item {
                width: 50%;
            }
        }

        @@media (min-width: 56rem) {
            .cards_item {
                width: 33.3333%;
            }
        }

        @@media (min-width: 40rem) {
            .cards_item2 {
                width: 50%;
            }
        }

        @@media (min-width: 56rem) {
            .cards_item2 {
                width: 33.3333%;
            }
        }

        .mainBod2 {
            max-width: 100%;
            margin: 0 auto;
            padding: 30px;
            align-items: center;
            background-color: #f2f2f2;
        }

        .banner2 {
            width: 100%;
            height: auto;
            justify-content: center;
            align-items: center;
            font-size: 20px;
        }

        .mainBod3 {
            max-width: 100%;
            margin: 0 auto;
            padding: 30px;
            align-items: center;
            background-color: #f2f2f2;
        }
        /*slider css*/

        .carousel {
            position: relative;
            overflow: hidden;
            border-radius: 30px;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

        .slide {
            min-width: 100%;
        }

        input[name="carousel"] {
            display: none;
        }

        .navigation {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
        }

        label {
            width: 15px;
            height: 15px;
            margin: 0 5px;
            border-radius: 50%;
            background-color: #E40163ff;
            cursor: pointer;
        }

        input[id="slide1"]:checked ~ .slides {
            transform: translateX(0);
        }

        input[id="slide2"]:checked ~ .slides {
            transform: translateX(-100%);
        }

        input[id="slide3"]:checked ~ .slides {
            transform: translateX(-200%);
        }

    </style>
</head>

<div class="main" style="background-color:none;">
    <div class="banner" style="background-color:none;justify-content:center;align-content:center;align-items:center; text-align:center;">
        <form method="post" enctype="multipart/form-data" asp-action="Create" runat="server" id="form1">

            <h1 style="font-size:25px;
                        color:#9e9e9e;text-align:left;
                        margin-left:10px;margin-top:50px; margin-bottom:50px; border-bottom: 1px solid #b9b9b9">

            Formulario de publicación.
        </h1>
        <ul class="cards">

                    
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  
