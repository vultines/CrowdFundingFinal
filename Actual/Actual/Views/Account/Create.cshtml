
@model Actual.Models.Usuario
@{
    ViewData["Title"] = "Iniciar Sesion";
   
}


<!DOCTYPE html>
<html>
<head>
    <title>Registrate</title>
    <style>
        body{
            width:100%;
            height:100%;
        }

        button {
          background-color: transparent;
          padding: 0;
          border: 0;
          outline: 0;
          cursor: pointer; }

        input {
          width:100%;
          background-color: transparent;
          padding: 0;
          border: 0;
          outline: 0;
          line-height: 1em;
        }
          input[type="submit"] {
            cursor: pointer; }
          input::placeholder {
            font-size: 1.0rem;
            font-family: "Century Gothic", sans-serif;
            font-weight: 300;
            letter-spacing: .1rem;
            color: #ccc; }

        /**
         * Bounce to the left side
         */
        @@keyframes bounceLeft {
          0% {
            transform: translate3d(100%, -50%, 0); }
          50% {
            transform: translate3d(-30px, -50%, 0); }
          100% {
            transform: translate3d(0, -50%, 0); } }

        /**
         * Bounce to the left side
         */
        @@keyframes bounceRight {
          0% {
            transform: translate3d(0, -50%, 0); }
          50% {
            transform: translate3d(calc(100% + 30px), -50%, 0); }
          100% {
            transform: translate3d(100%, -50%, 0); } }

        /**
         * Show Sign Up form
         */
        @@keyframes showSignUp {
          100% {
            opacity: 1;
            visibility: visible;
            transform: translate3d(0, 0, 0); } }

        /**
         * Page background
         */
        .user {
          display: flex;
          justify-content: center;
          align-items: center;
          width: 100%;
          height: 70vh;
          background: transparent;
          background-size: cover; }
          .user_options-container {
            position: relative;
            width: 80%; }
          .user_options-text {
            display: flex;
            justify-content: space-between;
            width: 100%;
            height:480px;
            font-size:20px;
            background-color: #9D0044ff;
            border-radius: 3px; }

        /**
         * Registered and Unregistered user box and text
         */
        .user_options-registered,
        .user_options-unregistered {
          width: 50%;
          padding: 75px 45px;
          color: #fff;
          font-weight: 300; }

        .user_registered-title,
        .user_unregistered-title {
          margin-top:30px;
          margin-bottom: 15px;
          font-size: 2.66rem;
          line-height: 1em; }

        .user_unregistered-text,
        .user_registered-text {
          font-size: 1rem;
          line-height: 1.4em; }

        .user_registered-login,
        .user_unregistered-signup {
          margin-top: 40px;
          border: 1px solid #ccc;
          border-radius: 3px;
          padding: 10px 30px;
          color: #fff;
          text-transform: uppercase;
          line-height: 1em;
          letter-spacing: .2rem;
          transition: background-color .2s ease-in-out, color .2s ease-in-out; }
          .user_registered-login:hover,
          .user_unregistered-signup:hover {
            color: rgba(34, 34, 34, 0.85);
                background-color: #fff;
            }

        /**
         * Login and signup forms
         */
        .user_options-forms {
          position: absolute;
          top: 50%;
          left: 30px;
          width: calc(50% - 30px);
          min-height: 530px;
          justify-content:center;
          align-content:center;
          background-color: #fff;
          border-radius: 3px;
          box-shadow: 2px 0 15px rgba(0, 0, 0, 0.25);
          overflow: hidden;
          transform: translate3d(100%, -50%, 0);
          transition: transform .4s ease-in-out; }
          .user_options-forms .user_forms-login {
            transition: opacity .4s ease-in-out, visibility .4s ease-in-out; }
          .user_options-forms .forms_title {
                border-bottom: 2px solid #E40163ff;
            margin-top: 35px;
            margin-bottom: 30px;
            justify-content:center;
            font-size: 1.5rem;
            font-weight: 500;
            line-height: 1em;
            text-transform: uppercase;
                color: #E40163ff;
            letter-spacing: .1rem; }
          .user_options-forms .forms_field:not(:last-of-type) {
            margin-bottom: 10px; }
          .user_options-forms .forms_field-input {
            width: 100%;

            border-bottom: 2px solid #ccc;
            padding: 8px;
            font-family: "Century Gothic" sans-serif;
            font-size: 2rem;
            font-weight: 300;
            color: gray;
            letter-spacing: .1rem;
            transition: border-color .2s ease-in-out; }
            .user_options-forms .forms_field-input:focus {
              border-color: gray;
                }
          .user_options-forms .forms_buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 35px; }
            .user_options-forms .forms_buttons-forgot {
              font-family: "Century Gothic", sans-serif;
              letter-spacing: .1rem;
                color: #F8F9FAff;
              text-decoration: underline;
              transition: color .2s ease-in-out; }
              .user_options-forms .forms_buttons-forgot:hover {
                color: #b3b3b3; }
            .user_options-forms .forms_buttons-action {
              margin-top:20px;
              background-color: #E40163ff;
              border-radius: 3px;
              padding: 10px 35px;
              font-size: 1rem;
              font-family: "Century Gothic", sans-serif;
              font-weight: 300;
              color: #fff;
              text-transform: uppercase;
              letter-spacing: .1rem;
              transition: background-color .2s ease-in-out; }
              .user_options-forms .forms_buttons-action:hover {
                    background-color: #e8716d;
                }
          .user_options-forms .user_forms-signup,
          .user_options-forms .user_forms-login {
            margin-top:10px;
            position: absolute;
            top: 70px;
            left: 40px;
            width: calc(100% - 80px);
            opacity: 0;
            visibility: hidden;
            transition: opacity .4s ease-in-out, visibility .4s ease-in-out, transform .5s ease-in-out; }
          .user_options-forms .user_forms-signup {
            transform: translate3d(120px, 0, 0); }
            .user_options-forms .user_forms-signup .forms_buttons {
              justify-content: flex-end; }
          .user_options-forms .user_forms-login {
            transform: translate3d(0, 0, 0);
            opacity: 1;
            visibility: visible; }

        /**
         * Triggers
         */
        .user_options-forms.bounceLeft {
          animation: bounceLeft 1s forwards; }
          .user_options-forms.bounceLeft .user_forms-signup {
            animation: showSignUp 1s forwards; }
          .user_options-forms.bounceLeft .user_forms-login {
            opacity: 0;
            visibility: hidden;
            transform: translate3d(-120px, 0, 0); }

        .user_options-forms.bounceRight {
          animation: bounceRight 1s forwards; }


    </style>

</head>

<body>
    <section class="user">
        <div class="user_options-container">
            <div class="user_options-text">
                <div class="user_options-unregistered">
                    <h2 class="user_unregistered-title">No tienes una cuenta?</h2>
                    <p class="user_unregistered-text">
                        Convierte Ideas en Historias de Éxito: En CrowdFunding, 
                        cada campaña es un viaje hacia el logro. Regístrate, 
                        conecta con una comunidad dedicada y haz realidad tus proyectos más ambiciosos. 
                        ¡Inspira, Compromete, Triunfa!
                    </p>
                    <button class="user_unregistered-signup" id="signup-button">Registrarse</button>
                </div>

                <div class="user_options-registered">
                    <h2 class="user_registered-title">Ya estas registrado?</h2>
                    <p class="user_registered-text">
                        Descubre el Poder de la Solidaridad: Regístrate en CrowdFunding, 
                        donde tus sueños encuentran apoyo y tu causa se convierte en inspiración. 
                        ¡Juntos, creamos impacto!
                    </p>
                    <button class="user_registered-login" id="login-button">Iniciar Sesión</button>
                </div>
            </div>

            <div class="user_options-forms" id="user_options-forms">
                <div class="user_forms-login">
                    <h2 class="forms_title">Iniciar Sesión</h2>

                    @using (Html.BeginForm("Loguear", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="text-danger">
                                @ViewData["Message"]
                            </div>
                            @Html.EditorFor(model => model.CorreoElectronico, new { htmlAttributes = new { @class = "input-text" ,placeholder = "Correo electrónico"  } })
                            @* @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })*@
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Contraseña, new { @class = "input-text", placeholder="Contraseña" })
                            @* @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })*@
                        </div>
                        <div class="checkbox" style="color:#E40163ff; margin-top:10px;">
                            <a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="link-not-important pull-right">Restablecer Contraseña</a>
                            <div class="clearfix"></div>
                        </div>
                        <div class="form-group mb-0">
                            <button type="submit" class="forms_buttons-action">Iniciar Sesión</button>
                        </div>
                    }
                   
                  


                </div>



                <div class="user_forms-signup">
                    <h2 class="forms_title">Registrate</h2>

                    @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "input-text", placeholder="Correo Electronico" })
                            @Html.ValidationMessageFor(m =>(m.CorreoElectronico), "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "input-text", placeholder="Nombre" })
                            @Html.ValidationMessageFor(m =>(m.Nombre), "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Apellido, new { @class = "input-text", placeholder="Apellido" })
                            @Html.ValidationMessageFor(m =>(m.Apellido), "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Celular, new { @class = "input-text", placeholder="Celular" })
                            @Html.ValidationMessageFor(m =>(m.Celular),"", new { @class = "text-danger" })
                            @*<span id="celularError" class="text-danger"></span>*@
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Contraseña, new { @class = "input-text", placeholder="Contraseña" })
                            @Html.ValidationMessageFor(m =>(m.Contraseña), "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="password" name="ConfirmPass" class="input-text" placeholder="Confirmar Contraseña" />
                        </div>
                        <div class="form-group mb-0">
                            <button  type="submit" class="forms_buttons-action">Registrarse</button>
                        </div>
                    }
                    
                </div>

            </div>
        </div>
    </section>

	<script>
        

        const signupButton = document.getElementById('signup-button'),
            loginButton = document.getElementById('login-button'),
            userForms = document.getElementById('user_options-forms')

        signupButton.addEventListener('click', () => {
            userForms.classList.remove('bounceRight')
            userForms.classList.add('bounceLeft')
        }, false)

        loginButton.addEventListener('click', () => {
            userForms.classList.remove('bounceLeft')
            userForms.classList.add('bounceRight')
        }, false)
	</script>
</body>
</html>


