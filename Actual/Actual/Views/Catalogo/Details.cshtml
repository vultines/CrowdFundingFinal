@model Actual.Models.Campaña

@{
    ViewData["Title"] = "Details";
}


<!DOCTYPE html>
<html>
<head>
    <style>

        .mainBod {
            max-width: 100%;
            margin: 0 auto;
            padding: 30px;
            align-items: center;
            background-color: #f2f2f2;
        }

        h1 {
            font-size: 34px;
            font-weight: 900;
            text-align: left;
            color: #E40163ff;
            font-size: 45px;
        }

        .banner {
            width: 100%;
            height: auto;
            justify-content: center;
            align-items: center;
            color: #fff;
            font-size: 20px;
        }

        img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            vertical-align: middle;
        }

        .imgBanner {
            width: 100%;
            height: 430px;
            object-fit: fill;
            vertical-align: middle;
        }

        .cards {
            display: flex;
            flex-wrap: wrap;
            list-style: none;
            margin: 0;
            padding: 0;
            background-color: none;
            justify-content: center;
            align-items: center;
        }

        .cards_item {
            padding: 1rem;
            background-color: none;
            color: #fff;
        }

        .card_content {
            padding: 0;
            background: none;
            justify-content: center;
            text-align: center;
            align-items: center;
            background-color: none;
        }

        .card_titleCont {
            width: auto;
            color: #E40163ff;
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: capitalize;
            margin: 0px;
            margin-bottom: 8px;
            justify-content: center;
            text-align: center;
            align-items: center;
            align-self: center;
            background-color: none;
        }

        .card_text {
            color: #575757;
            font-size: 1.40rem;
            line-height: 1.5;
            margin-bottom: 1.25rem;
            font-weight: bolder;
            background-color: none;
        }

        .cards_item2 {
            max-width: 300px;
            max-height: 130px;
            margin-left: 10px;
            padding: 1rem;
            background-color: none;
            border-radius: 100px;
            color: #fff;
            text-align: center;
        }

        @@media (min-width: 40rem) {
            .cards_item {
                width: 50%;
            }
        }

        @@media (min-width: 56rem) {
            .cards_item {
                width: 33.3333%;
            }
        }

        @@media (min-width: 40rem) {
            .cards_item2 {
                width: 50%;
            }
        }

        @@media (min-width: 56rem) {
            .cards_item2 {
                width: 33.3333%;
            }
        }

        .mainBod2 {
            max-width: 100%;
            margin: 0 auto;
            padding: 30px;
            align-items: center;
            background-color: #f2f2f2;
        }

        .banner2 {
            width: 100%;
            height: auto;
            justify-content: center;
            align-items: center;
            font-size: 20px;
        }

        .mainBod3 {
            max-width: 100%;
            margin: 0 auto;
            padding: 30px;
            align-items: center;
            background-color: #f2f2f2;
        }
        /*slider css*/

        .carousel {
            position: relative;
            overflow: hidden;
            border-radius:30px;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
        }

        .slide {
            min-width: 100%;
        }

        input[name="carousel"] {
            display: none;
        }

        .navigation {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
        }

        label {
            width: 15px;
            height: 15px;
            margin: 0 5px;
            border-radius: 50%;
            background-color: #E40163ff;
            cursor: pointer;
        }

        input[id="slide1"]:checked ~ .slides {
            transform: translateX(0);
        }

        input[id="slide2"]:checked ~ .slides {
            transform: translateX(-100%);
        }

        input[id="slide3"]:checked ~ .slides {
            transform: translateX(-200%);
        }


    </style>
</head>

<body>
    
    <div class="mainBod">
        
        <div class="banner">
            <ul class="cards">

                <li class="cards_item">
                    
                    <div class="carousel">
                        <input type="radio" id="slide1" name="carousel" checked>
                        <input type="radio" id="slide2" name="carousel">
                        <input type="radio" id="slide3" name="carousel">

                        <div class="slides">
                            @foreach (var image in Model.Imagens)
                            {
                                <div class="slide" id="slide1">
                                    <img src="data:image;base64,@Convert.ToBase64String(image.Ruta)" alt="@image.Id" class="img-fluid campaign-image" />
                                </div>
                            }
                        </div>

                        <div class="navigation">
                            <label for="slide1"></label>
                            <label for="slide2"></label>
                            <label for="slide3"></label>
                        </div>
                    </div>


                </li>

                <li class="cards_item">
                    <div class="card_content" style="background-color:none; height:auto; align-content:center; align-items:center; justify-content:center;">
                        <h2 class="card_titleCont" style="font-size:45px; color:#9D0044ff;">
                            Detalles de donación.
                        </h2>
                        <p class="card_text">
                            Puedes comunicarte con el encargado de esta campaña para poder realizar un aporte o donación. 
                        </p>
                        <p class ="card_text">
                            ¡Ayuda a cumplir sus metas!
                        </p>
                        <button onclick="enviarMensajeWhatsApp()" class=""
                           style="background-color:#9D0044ff; border-radius:8px;
                                   padding:9px; width:180px; height:auto; color:#fff; margin-top:8px;
                                   font-family:'Century Gothic', sans-serif; font-size:17px; text-align:center;"
                           >Donar
                       </button>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="mainBod2" style="background-color:#252525ff; color:#f7f7f7;">
        <div class="banner2">
            <h1 style="font-size:25px;
                        color:#c9c9c9;text-align:left;
                        margin-left:10px; margin-bottom:50px; border-bottom: 1px solid #b9b9b9">

                Resumen
            </h1>

            <h1 style="margin-top:16px; margin-bottom:20px;font-size:40px; color:#E40163ff;text-align:center; margin-left:10px;">
                @Html.DisplayFor(model => model.NombreCampaña)
            </h1>
            <ul class="cards">

                <li class="cards_item">
                    <div class="card_content">
                        <h2 class="card_titleCont" style="color:#fff;">
                            Descripción General.
                        </h2>
                        <p class="card_text" style="color:#c9c9c9;">
                            @Html.DisplayFor(model => model.DescripcionGeneral)
                        </p>
                    </div>
                </li>

                <li class="cards_item">
                    <div class="card_content">
                        <h2 class="card_titleCont" style="color:#fff;">
                            Objetivos.
                        </h2>
                        <p class="card_text" style="color:#c9c9c9;">
                            @Html.DisplayFor(model => model.Objetivos)
                        </p>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="mainBod2">
        <div class="banner2">
            <h1 style="font-size:25px;
                        color:#5c5c5c;text-align:left;
                        margin-left:10px; margin-bottom:50px; border-bottom: 1px solid #b9b9b9">

                Detalles
            </h1>

            <ul class="cards">

                <li class="cards_item">
                    <div class="card_content">
                        <h2 class="card_titleCont">
                            Visión.
                        </h2>
                        <p class="card_text">
                            @Html.DisplayFor(model => model.Vision)
                        </p>
                    </div>
                </li>

                <li class="cards_item">
                    <div class="card_content">
                        <h2 class="card_titleCont">
                            Riesgos.
                        </h2>
                        <p class="card_text">
                            @Html.DisplayFor(model => model.Riesgos)
                        </p>
                    </div>
                </li>

                <li class="cards_item">
                    <div class="card_content">
                        <h2 class="card_titleCont">
                            Enlace.
                        </h2>
                        <a class="card_text">
                            @Html.DisplayFor(model => model.Enlace)
                        </a>

                        
                    </div>
                </li>

            </ul>
            <a style="background-color:#9D0044ff; border-radius:8px;
                                   padding:9px; width:180px; height:auto; color:#fff; margin-top:8px;
                                   font-family:'Century Gothic', sans-serif; font-size:17px; text-align:center; align-self:end;" asp-action="Index">
                Volver
            </a>
        </div>
    </div>

    
    
    <script>
        function enviarMensajeWhatsApp() {
            var numeroTelefono = "@Model.IdUsuarioNavigation.Celular";

            var enlaceWhatsApp = "https://api.whatsapp.com/send?phone=" + numeroTelefono + "&text=Hola,%20quiero%20donar%20a%20tu%20campaña.";

            window.location.href = enlaceWhatsApp;
        }
    </script>
</body>

</html>

